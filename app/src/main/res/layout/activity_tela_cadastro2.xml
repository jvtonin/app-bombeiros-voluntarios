<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadastro2">

    <!-- Container principal centralizado -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Ocorrências"
            android:textStyle="bold"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Campos de entrada -->
        <EditText
            android:id="@+id/edtDataOcorrencia"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Data da Ocorrência"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtHoraChamado"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Horário do Chamado"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtHoraSaida"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Horário da Saída"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtHoraChegada"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Horário da Chegada"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtRetornoBase"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Retorno à Base"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtViaturas"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Viaturas"
            android:layout_marginBottom="24dp" />

        <!-- Botões -->
        <Button
            android:id="@+id/btnAvancar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#1A4DA1"
            android:onClick="processarBotaoAvancar"
            android:text="Avançar" />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1A4DA1"
            android:onClick="processarBotaoVoltar"
            android:text="Voltar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
