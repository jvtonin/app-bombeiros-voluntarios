<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadastro3">

    <!-- Container centralizado -->
    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="Cadastro de Ocorrências"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Campos de entrada -->
        <EditText
            android:id="@+id/edtBombeiro1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Bombeiro 1"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtBombeiro2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Bombeiro 2"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtBombeiro3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Bombeiro 3"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtCov"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="COV"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtTipoOcorrencia"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Tipo de Ocorrência"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtRelato"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Relato da Ocorrência"
            android:layout_marginBottom="24dp" />

        <!-- Botões -->
        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#1A4DA1"
            android:onClick="processarBotaoCadastrar"
            android:text="Cadastrar" />

        <Button
            android:id="@+id/btnVoltar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#1A4DA1"
            android:onClick="processarBotaoVoltar"
            android:text="Voltar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
